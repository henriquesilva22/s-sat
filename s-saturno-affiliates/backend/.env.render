# Configuração para Deploy em Produção
NODE_ENV=production
PORT=10000

# Database - Configure com a URL do PostgreSQL do seu provedor
# Render.com: postgresql://username:password@host:5432/database_name
# Fly.io: postgres://username:password@host:5432/database_name
# Supabase: postgresql://postgres:[YOUR-PASSWORD]@[HOST]:5432/postgres
DATABASE_URL=postgresql://username:password@host:5432/database_name

# CORS Origins - Adicione os domínios do seu frontend
CORS_ORIGINS=https://frontend-8r3wqxwa0-henrique-cardoso-silvas-projects.vercel.app,http://localhost:3000,http://localhost:5173

# JWT Secret (gere uma chave segura)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Password
ADMIN_PASSWORD=admin123

# Cloudinary Configuration (para upload de imagens)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Configurações opcionais
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting (configurado para alto tráfego)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_GET=2000
RATE_LIMIT_MAX_ADMIN_POST=100